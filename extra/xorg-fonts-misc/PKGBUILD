pkgname=xorg-fonts-misc
_pkgname=font-misc-misc
pkgver=1.1.2
pkgrel=2
pkgdesc="X.org misc fonts"
category=x11-fonts
arch=(any)
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('font-util' 'mkfontdir')
makedepends=('bdftopcf' 'gettext' 'gmake' 'libiconv' 'libtool' 'xtrans')
install=xfont.install

build() {

  cd "$portsdir/$category/$_pkgname"
  make clean
  make
  make deinstall
  make package PACKAGES="$srcdir"
}

package() {
  cd $pkgdir
  tar xpf "${srcdir}/${category}/${_pkgname}-${pkgver}.txz"
}

