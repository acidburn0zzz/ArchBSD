pkgname=xorg-macros
pkgver=1.16.1
pkgrel=1
category=devel
pkgdesc="X.Org Autotools macros"
arch=(any)
url="http://xorg.freedesktop.org"
license=('custom')
options=('!libtool')

build() {
  cd "$portsdir/$category/$pkgname"
  make clean
  make
  make deinstall
  make package PACKAGES="$srcdir"
}

package() {
  cd $pkgdir
  tar xpf "${srcdir}/${category}/${pkgname}-${pkgver}.txz"
}


