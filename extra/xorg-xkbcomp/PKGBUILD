pkgname=xorg-xkbcomp
_pkgname=xkbcomp
pkgver=1.2.3
pkgrel=1
category=x11
pkgdesc="X Keyboard description compiler"
arch=(i686 x86_64)
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('libxkbfile')
makedepends=('xorg-util-macros')
groups=('xorg-apps' 'xorg')

build() {

  cd "$portsdir/$category/$_pkgname"
  make clean
  make
  make deinstall
  make package PACKAGES="$srcdir"
}

package() {
  cd $pkgdir
  tar xpf "${srcdir}/${category}/${_pkgname}-${pkgver}.txz"
}


