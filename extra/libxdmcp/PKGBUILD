pkgname=libxdmcp
_pkgname=libXdmcp
pkgver=1.1.0
pkgrel=1
category=x11
pkgdesc="X11 Display Manager Control Protocol library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org"
license=('custom')
depends=('xproto')
makedepends=('xorg-util-macros')
options=('!libtool')

build() {

  CONFIGURE_ARGS="--disable-docs --without-xmlto --disable-static"

  cd "$portsdir/$category/$_pkgname"
  make clean
  make CONFIGURE_ARGS+="${CONFIGURE_ARGS}"
  make deinstall
  make package PACKAGES="$srcdir"
}

package() {
  cd $pkgdir
  tar xpf "${srcdir}/${category}/${_pkgname}-${pkgver}.txz"
}


