pkgname=libxcb
pkgver=1.7
pkgrel=1
category=x11
pkgdesc="x11 client-side library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org"
license=('custom')
depends=('libxau' 'libxdmcp' 'libpthread-stubs' )
makedepends=('libcheck' 'xcb-proto' )
options=('!libtool')

build() {
  unset LDFLAGS
  cd "$portsdir/$category/$pkgname"
  make clean
  make 
  make deinstall
  make package PACKAGES="$srcdir"
}

package() {
  cd $pkgdir
  tar xpf "${srcdir}/${category}/${pkgname}-${pkgver}.txz"
}


