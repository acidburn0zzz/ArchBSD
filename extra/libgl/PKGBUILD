pkgname=libgl
_pkgname=libGL
pkgver=7.11.2
pkgrel=2
category=graphics
pkgdesc="OpenGL hardware acceleration drivers for the DRI"
arch=('i686' 'x86_64')
url="http://dri.sourceforge.net/"
license=('custom')
depends=('dri2proto' 'expat' 'libxdamage' 'libxxf86vm' 'libdrm')
makedepends=('bigreqsproto' 'bison' 'glproto' 'inputproto' 'libcheck' 'libgcrypt' 'libgpg-error' 'libxslt' 'makedepend' 'py-libxml2' 'xcb-proto' 'xcmiscproto' 'xf86bigfontproto' 'xorg-macros' 'xtrans')
install=libgl.install

build() {
  cd "$portsdir/$category/$_pkgname"
  make clean
  make
  make deinstall
  make package PACKAGES="$srcdir"
}

package() {
  cd $pkgdir
  tar xpf "${srcdir}/${category}/${_pkgname}-${pkgver}_${pkgrel}.txz"
}


