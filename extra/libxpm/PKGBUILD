pkgname=libxpm
_pkgname=libXpm
pkgver=3.5.9
pkgrel=1
category=x11
pkgdesc="X11 pixmap library"
arch=('i686' 'x86_64')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('kbproto' 'libice' 'libsm' 'libx11' 'libxext' 'libxt' 'libpthread-stubs' 'xextproto' 'xproto')
makedepends=('xorg-util-macros')

build() {

  cd "$portsdir/$category/$_pkgname"
  make clean
  make 
  make deinstall
  make package PACKAGES="$srcdir"
}

package() {
  cd $pkgdir
  tar xpf "${srcdir}/${category}/${_pkgname}-${pkgver}.txz"
}


