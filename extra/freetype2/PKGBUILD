pkgname=freetype2
pkgver=2.4.11
pkgrel=1
category=print
pkgdesc="TrueType font rendering library"
arch=('i686' 'x86_64')
license=('GPL')
url="http://freetype.sourceforge.net/"
depends=('pkgconf')
makedepends=('gmake')

build() {

  cd "$portsdir/$category/$pkgname"
  make clean
  make 
  make deinstall
  make package PACKAGES="$srcdir"
}

package() {
  cd $pkgdir
  tar xpf "${srcdir}/${category}/${pkgname}-${pkgver}.txz"
}


