# $Id: PKGBUILD 152650 2012-03-07 19:44:52Z andyrtr $
# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: Alexander Baldeck <alexander@archlinux.org>
# Contributor: Wolfgang Bumiller <blub@speed.at>

pkgname=libxau
pkgver=1.0.7
pkgrel=1
pkgdesc="X11 authorisation library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
depends=('xproto>=7.0.18')
makedepends=('pkgconf')
license=('custom')
#options=('!libtool')
source=(${url}/releases/individual/lib/libXau-${pkgver}.tar.bz2)
sha1sums=('29c47207fd246425b906f525b2220235ce4cd0f6')

build() {
  cd "${srcdir}/libXau-${pkgver}"
  ./configure --prefix=/usr/local --sysconfdir=/usr/local/etc
  make
}

package() {
  cd "${srcdir}/libXau-${pkgver}"
  make DESTDIR="${pkgdir}" install

  install -dm755 "${pkgdir}/usr/local/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/local/share/licenses/${pkgname}/COPYING"

  install -dm755 "${pkgdir}/usr/local/libdata"
  mv "${pkgdir}/usr/local/lib/pkgconfig" \
     "${pkgdir}/usr/local/libdata/pkgconfig"
# ports does it
  ln -s /usr/local/libXau.so.6 "${pkgdir}/usr/local/lib/libXau.so.0"
}
