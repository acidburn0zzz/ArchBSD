infodir=usr/local/info
file=gperf.info.gz

post_install() {
  [ -x usr/local/bin/install-info ] || return 0
  install-info $infodir/$file $infodir/dir 2> /dev/null
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  [ -x usr/local/bin/install-info ] || return 0
  install-info --delete $infodir/$file $infodir/dir 2> /dev/null
}
