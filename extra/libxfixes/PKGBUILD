pkgname=libxfixes
_pkgname=libXfixes
pkgver=5.0
pkgrel=1
category=x11
pkgdesc="X Fixes extension library"
arch=('i686' 'x86_64')
url="http://xorg.freedesktop.org/"
license=('custom')
options=('!libtool')

build() {
  cd "$portsdir/$category/$_pkgname"
  make clean
  make
  make deinstall
  make package PACKAGES="$srcdir"
}

package() {
  cd $pkgdir
  tar xpf "${srcdir}/${category}/${_pkgname}-${pkgver}.txz"
}


