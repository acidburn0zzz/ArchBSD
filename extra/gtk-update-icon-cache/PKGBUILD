pkgname=gtk-update-icon-cache
pkgver=2.24.6
pkgrel=1
category=graphics
arch=('i686' 'x86_64')
url="http://www.gtk.org/"
pkgdesc="The GTK+ update icon cache tool"
depends=('atk' 'gdk-pixbuf' 'hicolor-icon-theme' 'libxcomposite' 'libxcursor' 'libxdamage' 'libxinerama' 'libxrandr' 'pango' 'shared-mime-info')
license=('GPL')

build() {
  cd "${portsdir}/${category}/${pkgname}"
  make clean
  make
  make deinstall
  make package PACKAGES="${srcdir}"
}

package() {
  cd "${pkgdir}"
  tar xpf "${srcdir}/${category}/${pkgname}-${pkgver}_${pkgrel}.txz"
}

