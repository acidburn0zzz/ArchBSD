pkgname=gtk-update-icon-cache
pkgver=2.24.6
pkgrel=1
category=graphics
arch=('i686' 'x86_64')
url="http://www.gtk.org/"
pkgdesc="The GTK+ update icon cache tool"
depends=('gdk-pixbuf2>=2.23.1-3')
license=('GPL')

build() {
  cd "${portsdir}/${category}/${pkgname}"
  make clean
  make
  make deinstall
  make package PACKAGES="${srcdir}"
}

package() {
  cd "${pkgdir}"
  tar xpf "${srcdir}/${category}/${pkgname}-${pkgver}_${pkgrel}.txz"
}

