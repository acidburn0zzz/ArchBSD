pkgname=atk
pkgver=2.0.1
pkgrel=1
category=accessibility
pkgdesc="A library providing a set of interfaces for accessibility"
arch=(i686 x86_64)
license=('LGPL')
depends=('gio-fam-backend' )
makedepends=('bison' 'gmp' 'gobject-introspection' 'm4' 'mingw32-bin-msvcrt' 'mingw32-binutils' 'mingw32-gcc' 'mpc' 'mpfr' )
options=('!libtool')
url='http://www.gtk.org/'

build() {
  cd "${portsdir}/${category}/${pkgname}"
  make clean
  make
  make deinstall
  make package PACKAGES="${srcdir}"
}

package() {
  cd "${pkgdir}"
  tar xpf "${srcdir}/${category}/${pkgname}-${pkgver}.txz"
}

