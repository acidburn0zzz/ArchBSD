pkgname=makedepend
pkgver=1.0.3
pkgrel=1
category=devel
pkgdesc="A dependency generator for makefiles"
arch=('i686' 'x86_64')
url="http://www.x.org/archive/X11R7.5/doc/man/man1/makedepend.1.html"
license=('custom')

build() {
     cd "$portsdir/$category/$pkgname"
     make
     make deinstall
     make package PACKAGES="$srcdir"
}

package() {
     cd "$pkgdir"
     tar xpf "${srcdir}/${category}/${pkgname}-${pkgver},${pkgrel}.txz"
}

