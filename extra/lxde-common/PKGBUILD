pkgname=lxde-common
pkgver=0.5.5
pkgrel=3
category=misc
pkgdesc='Common files of the LXDE Desktop'
arch=('any')
url='http://lxde.org/'
license=('GPL2')
groups=('lxde')
backup=(usr/local/etc/xdg/lxsession/LXDE/desktop.conf
        usr/local/etc/xdg/lxsession/LXDE/autostart)
depends=('gtk2' 'lxde-icon-theme' 'lxsession')
makedepends=('automake')
build() {
  cd "${portsdir}/${category}/${pkgname}"
  make clean
  make
  make deinstall
  make package PACKAGES="${srcdir}"
}

package() {
  cd "${pkgdir}"
  tar xpf "${srcdir}/${category}/${pkgname}-${pkgver}_${pkgrel}.txz"
}

