pkgname=lxterminal
pkgver=0.1.11
pkgrel=1
category=sysutils
pkgdesc="VTE-based terminal emulator (part of LXDE)"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://lxde.org/"
groups=('lxde')
depends=('fontconfig' 'libx11' 'glib2' 'vte' 'gtk2')

build() {
  cd "${portsdir}/${category}/${pkgname}"
  make clean
  make
  make deinstall
  make package PACKAGES="${srcdir}"
}

package() {
  cd "${pkgdir}"
  tar xpf "${srcdir}/${category}/${pkgname}-${pkgver}_${pkgrel}.txz"
}

