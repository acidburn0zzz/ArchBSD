pkgname=lxterminal
pkgver=0.1.11
pkgrel=1
category=sysutils
pkgdesc="VTE-based terminal emulator (part of LXDE)"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://lxde.org/"
groups=('lxde')
depends=('vte')
makedepends=('bdftopcf' 'bigreqsproto' 'cmake' 'cmake-modules' 'fontsproto' 'gmp' 'libxfont' 'libcheck' 'libgcrypt' 'libgpg-error' 'libxslt' 'mingw32-bin-msvcrt' 'mingw32-binutils' 'mingw32-gcc' 'mpc' 'mpfr' 'xcb-proto' 
'xcmiscproto' 'xf86bigfontproto')

build() {
  cd "${portsdir}/${category}/${pkgname}"
  make clean
  make
  make deinstall
  make package PACKAGES="${srcdir}"
}

package() {
  cd "${pkgdir}"
  tar xpf "${srcdir}/${category}/${pkgname}-${pkgver}_${pkgrel}.txz"
}

