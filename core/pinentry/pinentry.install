post_install() {
	install-info --quiet /usr/local/info/pinentry.info.gz /usr/local/info/dir
}

pre_remove() {
	install-info --quiet --delete /usr/local/info/pinentry.info.gz /usr/local/info/dir
}

post_remove() {
	if [ -f /usr/local/info/dir ]; 
	then 
		if sed -e '1,/Menu:/d' /usr/local/info/dir | grep -q '^[*] '; 
		then 
			true; 
		else 
			rm /usr/local/info/dir; 
		fi; 
	fi
}
