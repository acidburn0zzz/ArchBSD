post_install() {
	grep -q mysql /etc/group || /usr/sbin/pw groupadd mysql
	grep -q mysql /etc/passwd || /usr/sbin/pw useradd mysql -g mysql -d /var/lib/mysql -s /bin/false
	usr/local/bin/mysql_install_db --user=mysql --basedir=/usr/local --datadir=/var/lib/mysql
	chown -R mysql:mysql var/lib/mysql
}

pre_remove() {
	/usr/sbin/pw userdel mysql
	/usr/sbin/pw groupdel mysql
}
